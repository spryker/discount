{% extends '@Gui/Layout/layout.twig' %}

{% block section_title 'Create new discount' | trans %}

{% block action %}
    {{ backActionButton('/discount/index/list', 'List of Discounts' | trans) }}
{% endblock %}

{% block content %}

    {{ form_start(discountForm, {attr: {'id' : 'discount-form'}}) }}
        {{ tabs(discountFormTabs, {'discountForm': discountForm}) }}
    {{ form_end(discountForm) }}

{% endblock %}

{% block head_css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ assetsPath('css/spryker-zed-discount-main.css') }}">
{% endblock %}

{% block footer_js %}
    {{ parent() }}
    <script src="{{ assetsPath('js/spryker-zed-discount-main.js') }}"></script>
{% endblock %}
