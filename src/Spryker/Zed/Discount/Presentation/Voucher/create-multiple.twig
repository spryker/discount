{% extends '@Gui/Layout/layout.twig' %}

{% form_theme form '@Gui/Form/Theme/form-row-with-help-block.twig' %}

{% set section_title = 'Create Multiple Codes' %}

{% block action %}
    {{ backActionButton('/discount/pool', 'Back to Vouchers' | trans) }}
    {{ createActionButton('/discount/voucher/create-single', 'Create Single Code' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: section_title } %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
