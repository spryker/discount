{% extends '@Gui/Layout/layout.twig' %}

{% set section_title = 'Modify Pool Category' %}

{% block action %}
    {{ backActionButton('/discount/pool/categories', 'View Categories' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: section_title } %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
                <a class="btn btn-default" href="/discount/pool/categories">{{ 'Cancel' | trans }}</a>
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
