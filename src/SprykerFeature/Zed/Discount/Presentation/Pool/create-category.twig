{% extends '@Gui/Layout/layout.twig' %}

{% set section_title = 'Create Pool Category' %}

{% block action %}
    {{ backActionButton('/discount/pool', 'View Discount Pools' | trans) }}
    {{ viewActionButton('/discount/pool/categories', 'View Categories' | trans) }}
    {{ createActionButton('/discount/pool/create', 'Create Pool' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: section_title } %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
