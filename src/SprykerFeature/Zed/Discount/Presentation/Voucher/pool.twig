{% extends '@Application/Layout/layout.twig' %}


{% block body_class %}spy-page{% endblock %}


{% block content %}
    <div
        spy-app="spyFormat, spyGrid, spyForm, spyLayout"
        ng-strict-di
        ng-controller="ComController"
    >
        <div spy-form-update="update()" scope="voucher-pool-grid" channel="voucher-pool-form"></div>
        <div spy-form-update="closeLayer()" scope="voucher-pool-form" channel="voucher-pool-form"></div>
        <div spy-form-abort="closeLayer()" scope="voucher-pool-form" channel="voucher-pool-form"></div>

        <spy-listen on="voucher-pool-create-click" do="create = true ; read($argument); openLayer()" scope="voucher-pool-form" channel="voucher-pool-form"></spy-listen>
        <spy-listen on="voucher-pool-update-click" do="create = false; read($argument); openLayer()" scope="voucher-pool-form" channel="voucher-pool-form"></spy-listen>

        {% include '@Discount/Partials/navigation.twig' %}

        {% include '@Discount/Grid/voucher-pool-grid.twig' %}
        {% include '@Discount/Form/voucher-pool-form.twig' %}
    </div>
{% endblock %}
