{% extends '@Gui/Layout/layout.twig' %}

{% set section_title = 'Generated Vouchers View' %}

{% block breadcrumb %}
    <li class="active"><strong>{{ section_title | trans }}</strong></li>
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: section_title } %}

        {% block widget_header_content %}
            <a class="btn btn-sm btn-default" href="/discount/voucher/">{{ 'List Vouchers' | trans }}</a>
        {% endblock %}

        {% block widget_content %}

            <table class="table table-stripped table-bordered table-hover">
                    <tr>
                        <td>Valid until</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Value</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Count</td>
                        <td>{{ countVouchers }}</td>
                    </tr>
            </table>

            <pre>
                {{ dump(pool) }}
            </pre>


        {% endblock %}

    {% endembed %}

{% endblock %}
