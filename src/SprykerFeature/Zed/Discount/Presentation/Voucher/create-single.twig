{% extends '@Gui/Layout/layout.twig' %}

{% form_theme form '@Gui/Form/Theme/form-row-with-help-block.twig' %}

{% set section_title = 'Create Code' %}

{% block breadcrumb %}
    <li><a href="/discount/voucher">{{ 'Vouchers' | trans }}</a></li>
    <li class="active"><strong>{{ 'Create Voucher' | trans }}</strong></li>
{% endblock %}

{% block action %}
    {{ backActionButton('/discount/pool', 'Back to Vouchers' | trans) }}
    {{ createActionButton('/discount/voucher/create-multiple', 'Create Multiple Codes' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' with { widget_title: section_title } %}

        {% block widget_content %}

            {{ form_start(form) }}
                {{ form_widget(form) }}

                <input type="submit" class="btn btn-primary" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
