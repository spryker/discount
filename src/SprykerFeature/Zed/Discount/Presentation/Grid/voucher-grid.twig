<div class="spy-grid interactive"
     ng-controller="GridController"
     src="/discount/grid/voucher"
     name="voucher-grid"
     channel="voucher-form"
>
    <h3>Vouchers</h3>

    <div spy-grid-pages="pages" labels="{ items : 'Show items %n', pages : 'Page %n of %m' }"></div>

    <table>
        <thead>
            <tr>
                <th spy-grid-head="columns['code']" label="Code"></th>
                <th spy-grid-head="columns['voucher_pool']" label="Voucher Pool"></th>
                <th spy-grid-head="columns['is_active']" label="Is Active"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="row in rows" ng-click="$emitAllChannels('voucher-update-click', row)">
                <td>{[{ row['code'] }]}</td>
                <td>{[{ row['voucher_pool'] }]}</td>
                <td><spy-format-boolean content="row['is_active']"></spy-format-boolean></td>
            </tr>
            <tr ng-if="!rows.length">
                <td colspan="3">No results found</td>
            </tr>
        </tbody>
    </table>

    <div spy-grid-pages="pages" labels="{ items : 'Show items %n', pages : 'Page %n of %m' }"></div>

    <div class="spy-layout buttons">
        <button class="button default" ng-click="$emitAllChannels('voucher-create-click', {})">Add Voucher</button>
    </div>
</div>
