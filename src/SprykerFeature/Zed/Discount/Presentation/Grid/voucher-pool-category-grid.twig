<section
    class="spy-grid interactive"
    ng-controller="GridController"
    src="/discount/grid/voucherPoolCategory"
    name="voucher-pool-category-grid"
    channel="voucher-pool-category-form"
>
    <h3>Voucher Pool Categories</h3>

    <div spy-grid-pages="pages" labels="{ items : 'Show items %n', pages : 'Page %n of %m' }"></div>

    <table>
        <thead>
            <tr>
                <th spy-grid-head="columns['name']" label="Name"></th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="row in rows" ng-click="$emitAllChannels('voucher-pool-category-update-click', row)">
                <td>{[{ row['name'] }]}</td>
            </tr>
            <tr ng-if="!rows.length">
                <td colspan="1">No results found</td>
            </tr>
        </tbody>
    </table>

    <div spy-grid-pages="pages" labels="{ items : 'Show items %n', pages : 'Page %n of %m' }"></div>

    <div class="spy-layout buttons">
        <button class="button default" ng-click="$emitAllChannels('voucher-pool-category-create-click', {})">Add Category</button>
    </div>
</section>