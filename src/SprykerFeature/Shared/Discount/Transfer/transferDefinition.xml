<?xml version="1.0"?>
<transfers xmlns="http://xsd.spryker.com"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://xsd.spryker.com ../../src/Spryker/TransferObjectDefinitionSchema.xsd">

    <transfer name="DiscountDiscount">
        <use name="SprykerFeature\Zed\Calculation\Dependency\Plugin\CalculatorPluginInterface" short="CalculatorPluginInterface" />
        <use name="SprykerFeature\Zed\Discount\Dependency\Plugin\DiscountCollectorPluginInterface" short="DiscountCollectorPluginInterface" />
        <use name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountItemInterface" short="DiscountItemInterface" />
        <interface name="SprykerFeature\Shared\Discount\Dependency\Transfer\DiscountItemInterface" short="DiscountItemInterface" />
        <property name="idDiscount" type="int" default="null" />
        <property name="fkDiscountVoucherPool" type="int" default="null" />
        <property name="displayName" type="string" default="null" />
        <property name="description" type="string" default="null" />
        <property name="amount" type="string" default="null" />
        <property name="calculatorPlugin" type="string" default="null" />
        <property name="collectorPlugin" type="string" default="null" />
        <property name="isPrivileged" type="string" default="null" />
        <property name="isActive" type="string" default="null" />
        <property name="validFrom" type="string" default="null" />
        <property name="validTo" type="string" default="null" />
    </transfer>

    <transfer name="DiscountDiscountDecisionRule">
        <use name="SprykerFeature\Zed\Discount\Dependency\Plugin\DiscountDecisionRulePluginInterface" short="DiscountDecisionRulePluginInterface" />
        <property name="idDiscountDecisionRule" type="int" default="null" />
        <property name="fkDiscount" type="int" default="null" />
        <property name="name" type="string" default="null" />
        <property name="decisionRulePlugin" type="string" default="null" />
        <property name="value" type="string" default="null" />
    </transfer>

    <transfer name="DiscountDiscountVoucher">
        <property name="idDiscountVoucher" type="int" default="null" />
        <property name="fkDiscountVoucherPool" type="int" default="null" />
        <property name="code" type="string" default="null" />
        <property name="isActive" type="string" default="null" />
    </transfer>

    <transfer name="DiscountDiscountVoucherPool">
        <property name="idDiscountVoucherPool" type="int" default="null" />
        <property name="fkDiscountVoucherPoolCategory" type="int" default="null" />
        <property name="name" type="string" default="null" />
        <property name="template" type="string" default="null" />
        <property name="isActive" type="string" default="null" />
        <property name="isInfinitelyUsable" type="string" default="null" />
    </transfer>

    <transfer name="DiscountDiscountVoucherPoolCategory">
        <property name="idDiscountVoucherPoolCategory" type="int" default="null" />
        <property name="name" type="string" default="null" />
    </transfer>

</transfers>

