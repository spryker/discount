<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Discount">
        <property name="displayName" dataBuilderRule="unique()->sentence" />
        <property name="description" dataBuilderRule="sentence(10)" />
        <property name="amount" dataBuilderRule="=1"  />
        <property name="voucherCode" type="string"/>
        <property name="calculatorPlugin" type="string" />
        <property name="isExclusive" type="string" />
        <property name="isActive" type="string" dataBuilderRule="=1" />
        <property name="validFrom" type="string" dataBuilderRule="=2016-01-01" />
        <property name="validTo" type="string" dataBuilderRule="time('Y-m-d', '+10 years')" />
        <property name="collectorQueryString" type="string" />
        <property name="decisionRuleQueryString" type="string" />
    </transfer>

    <transfer name="CalculatedDiscount">
        <property name="idDiscount" type="int" />
        <property name="displayName" dataBuilderRule="unique()->sentence" />
        <property name="description" dataBuilderRule="sentence(10)" />
        <property name="voucherCode" type="string" dataBuilderRule="ean8" />
        <property name="unitGrossAmount" type="int" dataBuilderRule="=1" />
        <property name="sumGrossAmount" type="int" dataBuilderRule="=1" />
        <property name="quantity" type="int" dataBuilderRule="=1" />
    </transfer>

    <transfer name="DiscountGeneral">
        <property name="idDiscount" type="int" />
        <property name="discountType" dataBuilderRule="=cart_rule" />
        <property name="displayName" dataBuilderRule="unique()->sentence" />
        <property name="description" dataBuilderRule="sentence(10)" />
        <property name="validFrom" type="string" dataBuilderRule="=2016-01-01" />
        <property name="validTo" type="string" dataBuilderRule="time('Y-m-d', '+10 years')" />
        <property name="isExclusive" dataBuilderRule="=false" />
        <property name="isActive" dataBuilderRule="=true" />
    </transfer>

    <transfer name="DiscountCalculator">
        <property name="amount" type="string" dataBuilderRule="=1" />
        <property name="calculatorPlugin" dataBuilderRule="item-quantity > '1'" />
        <property name="collectorQueryString" dataBuilderRule="=PLUGIN_CALCULATOR_FIXED" />
    </transfer>

    <transfer name="DiscountCondition">
        <property name="decisionRuleQueryString" type="string" />
    </transfer>

    <transfer name="DiscountVoucher">
        <property name="idDiscount" type="int" />
        <property name="fkDiscountVoucherPool" type="int" />
        <property name="voucherBatch" type="int" />
        <property name="quantity" type="int" />
        <property name="customCode" type="string" />
        <property name="code" type="string" />
        <property name="randomGeneratedCodeLength" type="int" />
        <property name="maxNumberOfUses" type="int" />
    </transfer>

</transfers>

